{% set name = name|default('mode-switcher') %}
{% set startMode = startMode|default('preview') %}
{% set modes = ['create', 'preview', 'edit', 'style'] %}

<div class="v-mode-switcher">
    {% for mode in modes %}
        <input type="radio" name="{{ name }}" value="{{ mode }}" id="{{ name }}--{{ mode }}"{% if startMode == mode %} checked="checked"{% endif %}>
    {% endfor %}

    {% for mode in modes %}
        <label class="v-mode-switcher__item" for="{{ name }}--{{ mode }}" data-flag="v-drop" data-position="topout center" data-href="#{{ name }}--{{ mode }}-popover" data-position="middle rightout" data-behavior="hover">
            {% include '@SVG/' ~ mode ~ '.html.twig' %}
        </label>

        <div class="v-drop v-drop--tooltip" id="{{ name }}--{{ mode }}-popover">
            <div class="v-drop__content">
                {{ mode }}
            </div>
        </div>
    {% endfor %}

    <span class="v-mode-switcher__backdrop"></span>
</div>
